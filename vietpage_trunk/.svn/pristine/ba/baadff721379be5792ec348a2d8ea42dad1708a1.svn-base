function editItem(id,action) {
	if("edit"== action){
		var url = "/item?action=getItem&id=" + id;
		ajaxRequest(url, 'loadItem');
	}else{
		var form = document.getElementById("deleteItemForm");
		form.id.value = id;
		form.submit();
	}
}
