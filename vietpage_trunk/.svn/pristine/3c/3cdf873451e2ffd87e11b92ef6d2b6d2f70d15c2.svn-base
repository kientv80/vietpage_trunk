<project name="vietpage" default="dist" basedir=".">
    <description>
        Vietpage build file
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
	<path id="classpath">
		<fileset dir="webapps/WEB-INF/lib" includes="**/*.jar"/>
	</path>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" classpathref="classpath"/>
	<copy todir="${build}">
		<fileset dir="${src}" excludes="**/*.java"/>
	</copy>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>
    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/vietpage.jar" basedir="${build}" />
	<copy todir="webapps\WEB-INF\lib">
		<fileset dir="${dist}/lib"/>
	</copy>
  </target>
  
    <target name="run">
        <java fork="true" classname="com.vnsoft.server.TomcatServer">
            <classpath>
                <path refid="classpath"/>
                <path location="com.vnsoft.server.TomcatServer"/>
            </classpath>
        </java>
    </target>
	
  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>

</project>