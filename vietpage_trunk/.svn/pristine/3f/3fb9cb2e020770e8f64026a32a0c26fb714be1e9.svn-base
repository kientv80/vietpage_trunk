<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="s" uri="/struts-tags"%>
<%@ taglib prefix="ui" uri="/custom-tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://tiles.apache.org/tags-tiles" prefix="tiles"%>
<%@ taglib prefix="s" uri="/struts-tags"%>

<div id="item_mypagecontainer" class="panel panel-primary" style="border: 0px;">
	<div class="panel-heading">
		<h3 class="panel-title"><s:text name="vietpage.items.onvietpage"></s:text></h3>
	</div>
	<div class="search" >
		<div class="fb-like" data-href="http://vietpage.info" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
	</div>
	<div id="items" class="vietpage_items">
		<c:if test="${suggestItems != null && suggestItems.size() > 0}">
			<div class="section">
				<font color="black"><b><s:text name="vietpage.item.suggest"></s:text> </b></font>
			</div>
			<div style="float: left;position: relative;margin-bottom: 60px;">
				<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${suggestItems }"  params="width=220,height=250,editable=false,callback=m_viewSuggestItem,showView=true,btnPrefix=suggest,returnedBtnNames=suggest_btns,showDesc=true,showContactInfo=true,showAssessment=true"></ui:table>
			</div>
		</c:if>
		<c:if test="${items != null && items.size() > 0 && currentPage != null && currentPage == 'search' }">
			<div class="section">
				<font color="black"><b>Kết quả tìm kiếm</b></font>
			</div>
			<div style="float: left;position: relative;margin-bottom: 60px;">
				<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${items }"  params="width=220,height=250,editable=false,callback=m_viewItem3,showView=true,btnPrefix=discount,returnedBtnNames=discount_btns,showDesc=true,showContactInfo=true,showAssessment=true"></ui:table>
			</div>
		</c:if>
		<c:if test="${items != null && items.size() > 0 && currentPage != 'search'}">
			<div class="section">
				<font color="black"><b><s:text name="vietpage.item.discount"></s:text> </b></font>
			</div>
			<div style="float: left;position: relative;margin-bottom: 60px;">
				<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${items }"  params="width=220,height=250,editable=false,callback=m_viewItem3,showView=true,btnPrefix=discount,returnedBtnNames=discount_btns,showDesc=true,showContactInfo=true,showAssessment=true"></ui:table>
			</div>
		</c:if>
		<c:if test="${newItems != null && newItems.size() > 0  && currentPage != 'search'}">
			<div class="section">
				<font color="black"><b><s:text name="vietpage.item"></s:text></b></font>
			</div>
			<div style="float: left;position: relative;margin-bottom: 60px;">
			<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${newItems }"  params="width=220,height=250,editable=false,callback=viewItem4,showView=true,btnPrefix=new,returnedBtnNames=new_btns,showDesc=true,showContactInfo=true,showAssessment=true"></ui:table>
			</div>
		</c:if>
	</div>
</div>

