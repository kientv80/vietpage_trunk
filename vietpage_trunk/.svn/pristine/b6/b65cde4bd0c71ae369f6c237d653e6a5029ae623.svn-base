<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="s" uri="/struts-tags"%>
<%@ taglib prefix="ui" uri="/custom-tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://tiles.apache.org/tags-tiles" prefix="tiles"%>
<%@ taglib prefix="s" uri="/struts-tags"%>

<div id="item_mypagecontainer" class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title"><s:text name="vietpage.items.onvietpage"></s:text></h3>
	</div>
	<div class="search" >
		<div class="fb-like" style="float: left;" data-href="http://vietpage.info" data-send="true" data-width="450" data-show-faces="true"></div>
	</div>
	<div id="items" class="vietpage_items">
		<c:if test="${items != null && items.size() > 0}">
				<font color="#4AA4ED"><b><s:text name="vietpage.item.discount"></s:text> </b></font><br><br>
				<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${items }"  params="width=215,height=200,editable=false,callback=viewItem3,showView=true,btnPrefix=discount,returnedBtnNames=discount_btns,showDesc=true"></ui:table>
		</c:if>
		
		<c:if test="${newItems != null && newItems.size() > 0}">
			<font color="#4AA4ED"><b><s:text name="vietpage.item"></s:text></b></font><br>
			<ui:table contentProvider="com.vnsoft.server.contentprovider.ItemSimpleTableContentProvider" headers="Item 1, Item 2, Item 3" displayHeader="false" data="${newItems }"  params="width=215,height=200,editable=false,callback=viewItem4,showView=true,btnPrefix=new,returnedBtnNames=new_btns,showDesc=true"></ui:table>
		</c:if>
	</div>
</div>

