<div align="center" style="padding-top: 20%;">
	<b>VietPage Login</b><br><br><br>
	<form action="login" method="post" id="login">
		<table>
			<tr>
				<td><label>Username </label><input type="text" name="username" style="width: 100%;height: 40px;text-align: left;"/> </td>
			</tr>
			<tr>
				<td><label>Password </label><input type="password" name="password" style="width: 100%;height: 40px;"></td>
			</tr>
		</table>
		<button type="submit" value="Login" style="height: 40px;width: 100px;margin-top: 20px;">Login</button>
		<input type="hidden" value="login" name="action" >
	</form>
	<script type="text/javascript">
		function login(){
			document.getElementById('login').submit();
		}
	</script>
</div>