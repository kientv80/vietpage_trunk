<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="vietpage.register.name.required"></message>
		</field-validator>
	</field>
	<field name="url">
		<field-validator type="url">
			<message key="vietpage.register.url.validate"></message>
		</field-validator>
	</field>
	
	<field name="address">
		<field-validator type="requiredstring">
			<message key="vietpage.register.address.required"></message>
		</field-validator>
	</field>
	<field name="phone">
		<field-validator type="requiredstring">
			<message key="vietpage.register.phone.required"></message>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring">
			<message key="vietpage.register.email.required"></message>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="email">
			<message key="vietpage.register.email.validate"></message>
		</field-validator>
	</field>
	
	<field name="about">
		<field-validator type="requiredstring">
			<message key="vietpage.register.desc.required">You must enter something about your company</message>
		</field-validator>
	</field>
	<field name="service">
		<field-validator type="requiredstring">
			<message key="vietpage.register.service.required"></message>
		</field-validator>
	</field>
	<field name="username">
		<field-validator type="requiredstring">
			<message key="vietpage.register.username.required"></message>
		</field-validator>
	</field>
	<field name="password">
		<field-validator type="requiredstring">
			<message key="vietpage.register.password.required"></message>
		</field-validator>
	</field>
	<field name="price">
		<field-validator type="double">
			<param name="min">0</param>
			<message key="vietpage.register.price.validate"></message>
		</field-validator>
	</field>
	
	
</validators>